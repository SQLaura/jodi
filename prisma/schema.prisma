generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:database.sqlite"
}

model User {
  id              String  @id
  drops_enabled   Boolean @default(false)
  grabs_enabled   Boolean @default(false)
  series_enabled  Boolean @default(false)
  quests_enabled  Boolean @default(false)
  drops           String  @default("0")
  grabs           String  @default("0")
  series          String  @default("0")
  quests          String  @default("0")
}
